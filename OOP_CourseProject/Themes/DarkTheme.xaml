<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- colors -->
    <Color x:Key="PrimaryBackgroundColor">#222831</Color> <!-- dark gray -->
    <Color x:Key="SidePanelBackgroundColor">#31363F</Color> <!-- slightly lighter dark gray -->
    <Color x:Key="AccentColor">#FF007ACC</Color> <!-- blue (Visual Studio-ish) -->
    <Color x:Key="AccentColor2">#FF00C853</Color> <!-- green (stay the same) -->
    <Color x:Key="WarningColor">#FFFFC107</Color> <!-- yellow (stay the same) -->
    <Color x:Key="ErrorColor">#FFFF5252</Color> <!-- red (stay the same) -->

    <!-- brushes -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="{StaticResource PrimaryBackgroundColor}"/>
    <SolidColorBrush x:Key="SidePanelBackgroundBrush" Color="{StaticResource SidePanelBackgroundColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentBrush2" Color="{StaticResource AccentColor2}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>

    <!-- fonts -->
    <FontFamily x:Key="PrimaryFont">Segoe UI</FontFamily>

    <!-- styles -->
    <Style TargetType="DataGrid">
        <Setter Property="Background" Value="{StaticResource PrimaryBackgroundBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="RowBackground" Value="{StaticResource SidePanelBackgroundBrush}"/>
        <Setter Property="AlternatingRowBackground" Value="#FF3A3A3A"/>
        <Setter Property="GridLinesVisibility" Value="None"/>
        <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource AccentBrush}"/>
        <Setter Property="VerticalGridLinesBrush" Value="{StaticResource AccentBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="RowHeight" Value="32"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

</ResourceDictionary>