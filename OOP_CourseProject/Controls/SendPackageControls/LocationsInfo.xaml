<UserControl x:Class="OOP_CourseProject.Controls.SendPackageControls.LocationsInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OOP_CourseProject.Controls.SendPackageControls"
             xmlns:helpers="clr-namespace:OOP_CourseProject.Controls.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="210" d:DesignWidth="550">
    <Border CornerRadius="20" Background="{StaticResource SecondaryBackgroundBrush}">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Title + Description -->
            <StackPanel Grid.Row="0">
                <TextBlock Text="Маршрут" FontSize="24" FontWeight="Bold" Margin="0,0,0,0"/>
            </StackPanel>

            <!-- ComboBoxes --><!--
            <StackPanel Grid.Row="2" Orientation="Horizontal">
                <StackPanel Width="Auto" Margin="0,0,10,0">
                    <TextBlock Text="Тип вантажу" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
                    <ComboBox Style="{StaticResource ModernComboBox}"
                          HorizontalContentAlignment="Stretch"
                          Width="250"
                          Height="40"
                          SelectedItem="{Binding SelectedContentType, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                          ItemsSource="{Binding ContentTypes, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                </StackPanel>

                <StackPanel Width="Auto">
                    <TextBlock Text="Тип посилки" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
                    <ComboBox Style="{StaticResource ModernComboBox}"
                          HorizontalContentAlignment="Stretch"
                          Width="250"
                          Height="40"
                          ItemsSource="{Binding PackageTypes, RelativeSource={RelativeSource AncestorType=UserControl}}"
                          SelectedItem="{Binding SelectedPackageType, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}" />
                </StackPanel>
            </StackPanel>-->

            <!-- Dimensions -->
            <StackPanel Grid.Row="1" Margin="0,5,0,0">
                <TextBlock FontSize="12" Foreground="Black" Opacity="0.4" Text="Звідки"/>
                <TextBox x:Name="SentFrom"
                     Style="{StaticResource PlaceholderTextBox}"
                     FontSize="16"
                     VerticalAlignment="Center"
                     Margin="0,5,0,10" Height="30"
                     helpers:TextBoxHelper.Placeholder="* Адреса / Номер відділення"/>
                <TextBlock FontSize="12" Foreground="Black" Opacity="0.4" Text="Куди"/>
                <TextBox x:Name="SentTo"
                     Style="{StaticResource PlaceholderTextBox}"
                     FontSize="16"
                     VerticalAlignment="Center"
                     Margin="0,5,0,10" Height="30"
                     helpers:TextBoxHelper.Placeholder="* Адреса / Номер відділення"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
