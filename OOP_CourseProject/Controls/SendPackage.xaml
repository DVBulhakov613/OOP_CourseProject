<UserControl x:Class="OOP_CourseProject.Controls.SendPackage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:OOP_CourseProject.Controls.SendPackageControls"
        Height="945" Width="1600"
        Background="{StaticResource PrimaryBackgroundBrush}">
    
    <Grid Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="14*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Left Side: Scrollable Input Form -->
        <ScrollViewer Grid.Row="0" Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="20">
            <StackPanel>
                <local:ClientInfo x:Name="ClientInfo" Margin="0,0,0,0"/>
                <local:LocationsInfo x:Name="LocationsInfo" Margin="0,20,0,0"/>
                <local:PackageConfigurations x:Name="PackageConfigurations" Margin="0,20,0,0"/>
                <local:ContentInfo x:Name="ContentInfo" Margin="0,20,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Right Side: scratch the summary, it will be a map -->
        <TextBlock Grid.Row="0" Grid.Column="1" Text="Map Placeholder" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Black"/>

        <!-- Bottom Info Bar -->
        <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,10,0,0" Background="{StaticResource SecondaryBackgroundBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Delivery Cost -->
            <TextBlock Grid.Column="0" Text="{Binding DeliveryCost}" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" Visibility="Visible"/>
            <!-- Delivery Time -->
            <TextBlock Grid.Column="1" Text="{Binding DeliveryTime}" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" Visibility="Visible"/>
            <!-- ID -->
            <TextBlock Grid.Column="2" Text="{Binding PackageId}" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" Visibility="Visible"/>

            <!-- Buttons -->
            <Border Grid.Column="3" CornerRadius="8"  Background="Red" BorderThickness="1" Margin="8">
                <Button Content="Очистити" Foreground="White" Visibility="Visible"/>  
            </Border>

            <Border Grid.Column="4" CornerRadius="8" Background="{StaticResource SuccessBrush}" Margin="8">
                <Button Content="Підтвердити" Foreground="White" Visibility="Visible"/>
            </Border>
            
        </Grid>
    </Grid>
</UserControl>
