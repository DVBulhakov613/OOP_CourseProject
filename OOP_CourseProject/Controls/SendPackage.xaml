<UserControl x:Class="OOP_CourseProject.Controls.SendPackage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:OOP_CourseProject.Controls.SendPackageControls"
        Height="945" Width="1600"
        Background="{StaticResource PrimaryBackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <!-- Bottom bar adapts to content -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Left Side: Input Controls -->
        <ScrollViewer Grid.Row="0" Grid.Column="0" VerticalScrollBarVisibility="Auto" Padding="20" Background="Transparent">
            <StackPanel VerticalAlignment="Stretch">
                <local:ClientInfo DataContext="{Binding ClientInfo}"/>
                <local:LocationsInfo DataContext="{Binding LocationsInfo}" Margin="0,20,0,0"/>
                <local:PackageConfigurations DataContext="{Binding PackageInfo}" Margin="0,20,0,0"/>
                <local:ContentInfo DataContext="{Binding ContentInfo}" Margin="0,20,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Right Side: Map -->
        <Border Grid.Row="0" Grid.Column="1" Margin="20" Background="White" CornerRadius="10">
            <TextBlock Text="Map Placeholder"
                       FontSize="24"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="Black"/>
        </Border>

        <!-- Bottom Info Bar -->
        <Grid Grid.Row="1" Grid.ColumnSpan="2" Background="{StaticResource SecondaryBackgroundBrush}" Height="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Delivery Cost -->
            <TextBlock Grid.Column="0" Text="{Binding DeliveryCost}" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" Margin="10,0"/>
            <!-- Delivery Time -->
            <TextBlock Grid.Column="1" Text="{Binding DeliveryTime}" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" Margin="10,0"/>
            <!-- Package ID -->
            <TextBlock Grid.Column="2" Text="{Binding PackageId}" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" Margin="10,0"/>

            <!-- Buttons -->
            <Button 
                Grid.Column="3" 
                Content="Очистити" 
                Background="Red" 
                Foreground="White" 
                Margin="8" Padding="10,5" 
                FontWeight="Bold" 
                BorderThickness="0"
                Visibility="Visible"/>
            <Button 
                Grid.Column="4" 
                Content="Підтвердити" 
                Background="{StaticResource SuccessBrush}" 
                Foreground="White" 
                Margin="8" Padding="10,5" 
                FontWeight="Bold" 
                BorderThickness="0" 
                Visibility="Visible"/>
        </Grid>
    </Grid>
</UserControl>
