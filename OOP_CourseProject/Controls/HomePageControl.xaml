<UserControl x:Class="OOP_CourseProject.Controls.HomePageControl"
             xmlns:controls="clr-namespace:OOP_CourseProject.Controls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="945" Width="1520"
             Background="{StaticResource PrimaryBackgroundBrush}">

    <Grid>
        <!-- home page content -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Top cards -->
                <RowDefinition Height="*"/>
                <!-- table and details -->
            </Grid.RowDefinitions>

            <!-- top cards -->
            <UniformGrid Rows="1" Columns="4" Margin="0,0,0,20">
                <Border Background="White" CornerRadius="10" Margin="5" Padding="10" BorderBrush="LightGray" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Затримані посилки" FontFamily="{StaticResource PrimaryFont}" FontWeight="Bold"/>
                        <TextBlock Text="Кількість: 10" FontFamily="{StaticResource PrimaryFont}"/>
                    </StackPanel>
                </Border>
                <Border Background="White" CornerRadius="10" Margin="5" Padding="10" BorderBrush="LightGray" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Знайти посилку" FontFamily="{StaticResource PrimaryFont}" FontWeight="Bold"/>
                        <TextBlock Text="Будь-де, по ID" FontFamily="{StaticResource PrimaryFont}"/>
                    </StackPanel>
                </Border>
                <Border Background="White" CornerRadius="10" Margin="5" Padding="10" BorderBrush="LightGray" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Інформація" FontFamily="{StaticResource PrimaryFont}" FontWeight="Bold"/>
                        <TextBlock Text="Для клієнтів або нових працівників" FontFamily="{StaticResource PrimaryFont}"/>
                    </StackPanel>
                </Border>
                <Border Background="White" CornerRadius="10" Margin="5" Padding="10" BorderBrush="LightGray" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Оголошення" FontFamily="{StaticResource PrimaryFont}" FontWeight="Bold"/>
                        <TextBlock Text="Важливі повідомлення" FontFamily="{StaticResource PrimaryFont}"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- table and package details -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- DataGrid (might be placeholder) -->
                <DataGrid Grid.Column="0" AutoGenerateColumns="False" Margin="0,0,10,0" HeadersVisibility="Column" 
                          CanUserAddRows="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="*"/>
                        <DataGridTextColumn Header="Напрямок" Binding="{Binding Direction}" Width="*"/>
                        <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="*"/>
                        <DataGridTextColumn Header="Час оформлення" Binding="{Binding Time}" Width="*"/>
                        <DataGridTextColumn Header="Розмір" Binding="{Binding Size}" Width="*"/>
                        <DataGridTextColumn Header="Вага" Binding="{Binding Weight}" Width="*"/>
                        <DataGridTextColumn Header="Ціна" Binding="{Binding Price}" Width="*"/>
                        <DataGridTextColumn Header="Оплачено?" Binding="{Binding Paid}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- details panel (placeholder) -->
                <Border Background="White" CornerRadius="10" Padding="10" BorderBrush="LightGray" BorderThickness="1" Grid.Column="1">
                    <StackPanel>
                        <TextBox Text="placeholder text" Margin="0,0,0,10"/>
                        <TextBlock Text="Інформація відправника та отримувача" FontWeight="Bold"/>
                        <TextBlock Text="Деталі..." TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
    </UserControl>

