<UserControl x:Class="OOP_CourseProject.Controls.LocationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OOP_CourseProject.Controls"
             mc:Ignorable="d" 
             Height="Auto" Width="Auto"
             d:DesignHeight="1000" d:DesignWidth="1700">
    <Grid>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Toolbar -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <Button Background="Transparent" Command="{Binding AddCommand}" Margin="0,0,10,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="/Assets/ButtonIcons/Variant=Add.png" Width="20" Height="20" Margin="0,0,5,0"/>
                        <TextBlock Text="Додати" VerticalAlignment="Center" Foreground="Black"/>
                    </StackPanel>
                </Button>
                <Button Background="Transparent" Command="{Binding UpdateCommand}" Margin="0,0,10,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="/Assets/ButtonIcons/Variant=Edit.png" Width="20" Height="20" Margin="0,0,5,0"/>
                        <TextBlock Text="Оновити" VerticalAlignment="Center" Foreground="Black"/>
                    </StackPanel>
                </Button>
                <Button Background="Transparent" Command="{Binding DeleteCommand}" Margin="0,0,10,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="/Assets/ButtonIcons/Variant=Remove.png" Width="20" Height="20" Margin="0,0,5,0"/>
                        <TextBlock Text="Видалити" VerticalAlignment="Center" Foreground="Black"/>
                    </StackPanel>
                </Button>
                <Button Background="Transparent" Command="{Binding RefreshCommand}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="/Assets/ButtonIcons/Variant=Refresh.png" Width="16" Height="16" Margin="0,0,5,0"/>
                        <TextBlock Text="Оновити" VerticalAlignment="Center" Foreground="Black"/>
                    </StackPanel>
                </Button>
            </StackPanel>
            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- DataGrid -->
                <Border Grid.Column="0"
                     Background="White" BorderBrush="LightGray" BorderThickness="1" CornerRadius="10"
                     Padding="10" Margin="0,0,10,0">
                    <DataGrid ItemsSource="{Binding Locations}"
                           SelectedItem="{Binding SelectedLocation, Mode=TwoWay}"
                           SelectionMode="Single"
                           AutoGenerateColumns="False"
                           HeadersVisibility="Column"
                           CanUserAddRows="False"
                           IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="*" />
                            <DataGridTextColumn Header="Тип" Binding="{Binding LocationType}" Width="*" />
                            <DataGridTextColumn Header="Адреса" Binding="{Binding GeoData.Address}" Width="*" />
                            <DataGridTextColumn Header="Регіон" Binding="{Binding GeoData.Region}" Width="*" />
                            <DataGridTextColumn Header="Кількість працівників" Binding="{Binding Staff.Count}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
                
                <!-- Details Panel -->
                <Border Grid.Column="1"
                     Background="White" BorderBrush="LightGray" BorderThickness="1" CornerRadius="10"
                     Padding="10">
                    <StackPanel>
                        <TextBlock Text="Деталі локації" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding SelectedLocation.LocationType}" FontSize="14"/>
                        <TextBlock Text="{Binding SelectedLocation.GeoData.Address}" FontSize="14"/>
                        <TextBlock Text="{Binding SelectedLocation.GeoData.Region}" FontSize="14"/>
                        <TextBlock Text="Працівників: " FontSize="14"/>
                        <TextBlock Text="{Binding SelectedLocation.Staff.Count}" FontSize="14"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
