<Window x:Class="OOP_CourseProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="1000" Width="1920"
        Background="{StaticResource PrimaryBackgroundBrush}">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- content area -->
        </Grid.ColumnDefinitions>

        <!-- sidebar -->
        <StackPanel Background="{StaticResource SecondaryBackgroundBrush}" Grid.Column="0">
            <!-- profile and navigation -->
            <Ellipse Width="100" Height="100" Fill="Red" Margin="20"/>
            <Button Content="Домашня сторінка" FontSize="16" Click="HomeButton_Click" Foreground="Black" Visibility="Visible" HorizontalContentAlignment="Left"/>
            <Button Content="Відправити посилку" FontSize="16" Click="SendPackageButton_Click" Foreground="Black" HorizontalContentAlignment="Left" Visibility="{Binding Converter={StaticResource PermissionConverter}, ConverterParameter=11}"/>
            <Button Content="Отримати посилку" FontSize="16" Click="ReceivePackageButton_Click" Foreground="Black" HorizontalContentAlignment="Left" Visibility="{Binding Converter={StaticResource PermissionConverter}, ConverterParameter=10}"/>
            <Button Content="Клієнти" FontSize="16" Click="ClientsButton_Click" Foreground="Black" HorizontalContentAlignment="Left" Visibility="{Binding Converter={StaticResource PermissionConverter}, ConverterParameter=150}"/>
            <Button Content="Працівники" FontSize="16" Click="EmployeesButton_Click" Foreground="Black" HorizontalContentAlignment="Left" Visibility="{Binding Converter={StaticResource PermissionConverter}, ConverterParameter=41}"/>
            <Button Content="Локації" FontSize="16" Click="LocationsButton_Click" Foreground="Black" HorizontalContentAlignment="Left" Visibility="{Binding Converter={StaticResource PermissionConverter}, ConverterParameter=51}"/>
        </StackPanel>

        <!-- main content -->
        <ContentControl x:Name="MainContent" Grid.Column="1" Padding="0" />
    </Grid>
</Window>
