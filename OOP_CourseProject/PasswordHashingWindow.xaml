<Window x:Class="OOP_CourseProject.PasswordHashingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password Hashing" Height="200" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="5"/>
            <Button Content="Hash Password" Width="200" Margin="5" Click="HashPasswordButton_Click"/>
            <TextBox x:Name="HashedPasswordTextBox" Width="200" Margin="5" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Window>