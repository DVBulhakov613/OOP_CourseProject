<Window x:Class="OOP_CourseProject.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- login form -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox x:Name="UsernameTextBox" Width="200" Margin="5"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="5"/>
            <Border CornerRadius="5" Background="{StaticResource AccentBrush}" Margin="5">
                <Button Content="Авторизуватись" Width="200" Margin="0" Click="LoginButton_Click" Visibility="Visible"/>
            </Border>
            
            <Button Content="[DEBUG] SysAdmin" Width="200" Click="DebugButton_Click" Background="Gray" Visibility="Visible"/> <!-- REMOVE LATER -->
        </StackPanel>
    </Grid>
</Window>
